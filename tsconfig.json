{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "#koi/*": ["src/*"]
    },
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "emitDeclarationOnly": false,
    "outDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/types.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
