{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "#koijs/types": ["./dist/types.d.ts"]
    },
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/types.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
